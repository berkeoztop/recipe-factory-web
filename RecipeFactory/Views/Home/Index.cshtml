@model IEnumerable<RecipeFactoryWeb.Models.Recipe>

@{
	ViewData["Title"] = "Home Page";
	var temp = 1;
}

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
	<div class="carousel-inner rounded-3">
		<div class="carousel-item active">
			<img src="https://loremflickr.com/320/200/pasta,rice?random=1" class="d-block w-100" alt="..." style="height: 550px">
		</div>
		<div class="carousel-item">
			<img src="https://loremflickr.com/320/200/pasta,rice?random=2" class="d-block w-100" alt="..." style="height: 550px">
		</div>
		<div class="carousel-item active">
			<img src="https://loremflickr.com/320/200/pasta,rice?random=3" class="d-block w-100" alt="..." style="height: 550px">
		</div>
		<div class="carousel-item">
			<img src="https://loremflickr.com/320/200/pasta,rice?random=4" class="d-block w-100" alt="..." style="height: 550px">
		</div>
	</div>
	<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
		<span class="carousel-control-prev-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Previous</span>
	</button>
	<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
		<span class="carousel-control-next-icon" aria-hidden="true"></span>
		<span class="visually-hidden">Next</span>
	</button>
</div>

<br/>
<h2>Super Delicious</h2>
<br/>

<div class="row g-4">
	@foreach (var item in Model)
	{
		<div class="col-4">
			<div class="card h-100">
				<a asp-controller="Recipe" asp-action="RecipeDetail" asp-route-id="@item.Id" style="color: black; text-decoration: none">

					<img src="https://loremflickr.com/320/200/pasta,rice?random=\@temp" class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">@item.Name</h5>
					<p class="card-text">@item.Type</p>
				</div>
				<div class="card-footer">
					<small class="text-muted">@item.CreatedDateTime</small>
				</div>
				</a>
			</div>
		</div>
		temp++;
	}
</div>

<br/>
<h2>Latest Recipes</h2>
<br/>

<div class="row g-4">
	@foreach (var item in Model)
	{
		<div class="col-3">
			<div class="card h-50">
				<a asp-controller="Recipe" asp-action="RecipeDetail" asp-route-id="@item.Id" style="color: black; text-decoration: none">

					<img src="https://loremflickr.com/320/200/pasta?random=\@temp" class="card-img-top " alt="...">
				<div class="card-body">
					<h5 class="card-title">@item.Name</h5>
				</div>
				</a>
			</div>
		</div>
		temp++;
	}
</div>